{
  "name": "watchtower-bridge",
  "title": "Watchtower Bridge",
  "description": "Bridge between Watchtower (personal) and Sam (work) systems",
  "icon": "extension-icon.png",
  "author": "kris",
  "categories": ["Productivity"],
  "license": "MIT",
  "commands": [
    {
      "name": "set-energy",
      "title": "Set Energy Zone",
      "subtitle": "Watchtower",
      "description": "Set your current energy zone (Green/Yellow/Red)",
      "mode": "view",
      "keywords": ["wt", "energy", "zone"]
    },
    {
      "name": "brain-dump",
      "title": "Brain Dump",
      "subtitle": "Watchtower",
      "description": "Quick brain dump capture to inbox",
      "mode": "view",
      "keywords": ["wt", "dump", "capture", "inbox"]
    },
    {
      "name": "today",
      "title": "Today's Intelligence",
      "subtitle": "Watchtower",
      "description": "Show today's intelligence headlines",
      "mode": "view",
      "keywords": ["wt", "today", "briefing"]
    },
    {
      "name": "remind",
      "title": "Quick Reminder",
      "subtitle": "Watchtower",
      "description": "Create a Todoist reminder",
      "mode": "view",
      "keywords": ["wt", "remind", "todo", "task"]
    },
    {
      "name": "now",
      "title": "Current Peak",
      "subtitle": "Watchtower",
      "description": "Show current peak window based on time",
      "mode": "no-view",
      "keywords": ["wt", "now", "peak", "energy"]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.64.0",
    "@raycast/utils": "^1.10.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.10.0",
    "@types/react": "18.2.42",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
